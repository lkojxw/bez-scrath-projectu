JavaScript (script.js):

javascript
Zkopírovat kód
document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('code-form');
    const codeInput = document.getElementById('code-input');
    const statusDiv = document.getElementById('status');

    // Definujte očekávaný kód
    const expectedCode = '55417480'; // Zde je váš očekávaný kód

    form.addEventListener('submit', (event) => {
        event.preventDefault(); // Zabraňte odeslání formuláře

        const userCode = codeInput.value.trim();

        if (userCode === expectedCode) {
            statusDiv.textContent = 'Ověření úspěšné. Spouštím projekt...';
            // Zde můžete přidat kód pro spuštění projektu
            // Například přesměrování na jinou stránku:
            // window.location.href = 'vase-projektova-stranka.html';
        } else {
            statusDiv.textContent = 'Ověření neúspěšné. Zkuste to znovu.';
        }
    });
});
